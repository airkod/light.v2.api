{
  "compilerOptions" : {
    "target" : "es2016",
    "module" : "CommonJS",
    "esModuleInterop" : true,
    "moduleResolution" : "node",
    "forceConsistentCasingInFileNames" : true,
    "experimentalDecorators" : true,
    "strict" : true,
    "skipLibCheck" : true,
    "removeComments" : true,
    "strictNullChecks": false,
    "baseUrl" : "./",
    "paths" : {
      "@env": [
        "src/env"
      ],
      "@interface/*": [
        "src/interface/*"
      ],
      "@controller/*": [
        "src/controller/*"
      ],
      "@helper/*": [
        "src/helper/*"
      ],
      "@middleware/*": [
        "src/middleware/*"
      ]
    }
  }
}
